{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["vite/client", "bun-types"],
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "../server/src/*"],
      "@cricket247/server/types": ["../server/src/db/types.ts"],
      "@cricket247/server/schemas": [
        "../server/src/schemas/drizzle.schemas.ts"
      ],
      "@cricket247/server/contract": ["../server/src/routers/index.ts"]
    },
    "strictNullChecks": true
  }
}
