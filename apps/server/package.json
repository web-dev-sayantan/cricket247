{
  "name": "@cricket247/server",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "types": "./src/db/types.ts"
    },
    "./schemas": {
      "types": "./src/schemas/drizzle.schemas.ts"
    },
    "./contract": {
      "types": "./src/routers/index.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "test": "bun test --preload ./src/test/setup.ts",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "wrangler": "wrangler",
    "deploy": "wrangler deploy --config wrangler.jsonc",
    "deploy:dry-run": "wrangler deploy --dry-run --config wrangler.jsonc",
    "db:local": "turso dev --db-file local.db",
    "db:kit": "drizzle-kit",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed:tournament": "bun run src/db/seeds/tournament-organization.seed.ts",
    "db:seed:venues": "bun run src/db/seeds/venues.seed.ts",
    "db:seed:players": "bun run src/db/seeds/players.seed.ts",
    "db:seed:org-venues": "bun run src/db/seeds/organization-venues.seed.ts",
    "db:seed:team-players": "bun run src/db/seeds/team-players.seed.ts",
    "db:seed:fixtures": "bun run src/db/seeds/fixtures.seed.ts",
    "db:seed:matches": "bun run src/db/seeds/matches.seed.ts",
    "db:seed:scoring": "bun run src/db/seeds/scoring.seed.ts",
    "openapi:generate": "bun run scripts/generate-openapi.ts",
    "openapi:validate": "bun run scripts/validate-openapi.ts"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.18",
    "@libsql/client": "^0.17.0",
    "@orpc/client": "^1.13.5",
    "@orpc/openapi": "^1.13.5",
    "@orpc/server": "^1.13.5",
    "@orpc/zod": "^1.13.5",
    "better-auth": "^1.4.18",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "drizzle-orm": "beta",
    "hono": "^4.12.0",
    "resend": "^6.9.2",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "drizzle-kit": "beta",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "wrangler": "^4.67.0"
  }
}
